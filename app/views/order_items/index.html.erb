<h2>Carrinho de Compras</h2>

<table>
    <thead>
        <tr>
            <td>Produto</td>
            <td>Pre√ßo</td>
            <td>Quantidade</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <%= @items.each do |item| %>
            <tr>
                <td><%= item.product.title %></td>
                <td><%= number_to_currency item.price %></td>
                <td><%= item.quantity %></td>
                <td>
                    <%= form_for item, method: :delete do |f| %>
                        <%= f.submit "Remover" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>    
</table>